<% include ./partials/header.ejs %>

<div class="container mt-4">
    <form action="/signup" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Name</label>
            <input type="text" name="name" class="form-control" id="inputEmail4">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Username</label>
            <input type="text" name="username" class="form-control" id="username">
            <span class="text-danger" id="err" ></span>
          </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Email</label>
              <input type="email" name="email" class="form-control" id="inputEmail4">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Password</label>
              <input type="password" name="password" class="form-control" id="inputPassword4">
            </div>
          </div>
        
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity">
          </div>
         
          <div class="form-group col-md-2">
            <label for="inputZip">Phone Number</label>
            <input type="text" name="phnumber" class="form-control" id="inputZip">
          </div>
        </div>
        <div class="form-group">
          
        </div>
        <button id="btn" type="submit" class="btn btn-primary">Sign in</button>
      </form>
    
</div>

<script>
  let username = document.querySelector('#username');
    username.addEventListener('input', function(){
      if(username.value.trim().length !== 0){
        axios.get(`http://localhost:3000/findUser/${username.value}`)
      .then(function(serverResponse){
        if(serverResponse.data === null){
          username.style.color = 'black';
          document.querySelector('#err').textContent = '';
          document.querySelector('#btn').removeAttribute('disabled');
        }
        else{
          username.style.color = 'red';
          document.querySelector('#err').textContent = 'Already Taken!';
          document.querySelector('#btn').setAttribute('disabled', 'true');
        }
       
      })
      } else{
          username.style.color = 'black';
          document.querySelector('#err').textContent = '';
          document.querySelector('#btn').removeAttribute('disabled');
        }
     
    })
</script>


